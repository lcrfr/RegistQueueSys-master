
@{
    Layout = "~/Views/Shared/_Blank.cshtml";

    List<ItemData> ServiceList = (List<ItemData>)ViewBag.ServiceList;
    List<ItemData> WTimeList = (List<ItemData>)ViewBag.WTimeList;
}

@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">

        var layer3;
        jQuery(document).ready(function () {

            layui.use('layer', function () {
                layer3 = layui.layer;
            });
        });

        function onSubmit() {

            var serviceno = $("#serviceNo").val();
            var weekday1 = $("#week1").val();
            var weekday2 = $("#week2").val();
            var weekday3= $("#week3").val();
            var weekday4 = $("#week4").val();
            var weekday5 = $("#week5").val();
            var weekday6 = $("#week6").val();
            var weekday7 = $("#week7").val();

            if (serviceno > 0) {
                $.post(
                    "/ServData/ServRota/SaveRota",
                    { a: Math.random(), serviceNo: serviceno, week1: weekday1, week2: weekday2, week3: weekday3, week4: weekday4, week5: weekday5, week6: weekday6, week7: weekday7 },
                    function (data) {
                        if (data === "SUCCESS") {
                            layer3.msg("保存成功!");
                        }
                        else {
                            layer3.msg('保存失败!');
                        }
                    }
                );
            }
            else {
                layer3.msg('请正确选择业务!');
            }
        }

        function onCancel() {
            var index = parent.layer.getFrameIndex(window.name);
            parent.layer.close(index);
        }
    </script>
}

<br />
